targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-prometheus"
pkgver="2.39.1"
pkgdesc="An open-source systems monitoring and alerting toolkit"
pkgdesclong=(
  "An open-source systems monitoring and alerting toolkit"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
sources=(
  "https://github.com/prometheus/prometheus/releases/download/v${pkgver}/prometheus-${pkgver}.linux-amd64.tar.gz"
  "prometheus.default"
  "prometheus.service"
  "prometheus.sysusers"
  "prometheus.yml"
)
hashsums=(
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
)

depends=(
  "systemd"
)

conflicts=(
  "prometheus"
)

package() {
  cd "${srcdir}/prometheus-${pkgver}.linux-amd64"
  
  install -Dm755 prometheus \
    "${pkgdir}"/opt/zextras/common/bin/prometheus
  install -Dm755 promtool \
    "${pkgdir}"/opt/zextras/common/bin/promtool

  install -dm750 -o210 -g210 "${pkgdir}"/var/lib/prometheus
  install -dm750 -o210 -g210 "${pkgdir}"/opt/zextras/common/etc/template

  install -Dm640 -g210 "${srcdir}"/prometheus.yml \
    "${pkgdir}"/opt/zextras/common/etc/prometheus/prometheus.yml

  install -Dm644 "${srcdir}"/prometheus.service \
    "${pkgdir}"/usr/lib/systemd/system/${pkgname}.service
  install -Dm644 "${srcdir}"/prometheus.sysusers \
    "${pkgdir}"/usr/lib/sysusers.d/${pkgname}.conf
  install -Dm644 "${srcdir}"/prometheus.default \
    "${pkgdir}"/etc/default/${pkgname}
}

postinst() {
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

  systemd-sysusers >/dev/null || true
  systemd-tmpfiles --create >/dev/null || true

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable ${pkgname}.service >/dev/null 2>&1 || :
  fi

  echo "======================================================"
  echo "Carbonio Prometheus installed successfully!"
  echo "You have to enable customize your configutration in /opt/zextras/common/etc/prometheus/prometheus.yml"
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable ${pkgname} >/dev/null 2>&1 || :
    systemctl stop ${pkgname} >/dev/null 2>&1 || :
  fi
}

postrm() {
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}