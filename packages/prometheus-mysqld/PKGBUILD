targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-prometheus-mysqld-exporter"
pkgver="0.14.0"
pkgrel="2"
pkgdesc="Mysqld exporter for open-source systems monitoring and alerting toolkit"
pkgdesclong=(
  "Mysqld manager exporter for open-source systems monitoring and alerting toolkit"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
sources=(
  "https://github.com/prometheus/mysqld_exporter/releases/download/v${pkgver}/mysqld_exporter-${pkgver}.linux-amd64.tar.gz"
  "${pkgname}.default"
  "${pkgname}.service"
  "${pkgname}.cnf"
  "${pkgname}-consul.json"
  "prometheus.sysusers"
)

hashsums=(
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
)

depends=(
  "systemd"
)

conflicts=(
  'prometheus-mysqld-exporter'
)

backup(
	"/etc/default/${pkgname}"
    "/opt/zextras/common/etc/prometheus/${pkgname}.cnf"
)

package() {
  cd "${srcdir}/mysqld_exporter-${pkgver}.linux-amd64"

  install -Dm755 mysqld_exporter \
    "${pkgdir}/opt/zextras/common/bin/${pkgname}"

  install -Dm644 "${srcdir}/${pkgname}.service" \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"
	
  install -Dm644 "${srcdir}/${pkgname}.default" \
    "${pkgdir}/etc/default/${pkgname}"
	
  install -Dm644 "${srcdir}/${pkgname}.cnf" \
    "${pkgdir}/opt/zextras/common/etc/prometheus/${pkgname}.cnf"

  install -Dm644 "${srcdir}/prometheus.sysusers" \
    "${pkgdir}/usr/lib/sysusers.d/${pkgname}.conf"
  install -Dm644 "${srcdir}/${pkgname}-consul.json" \
    "${pkgdir}/etc/zextras/service-discover/${pkgname}.json"		
}

postinst() {
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

  systemd-sysusers >/dev/null || true
  systemd-tmpfiles --create >/dev/null || true

  #source /opt/zextras/bin/zmshutil || exit 1
  #zmsetvars
  #
  #echo "user= $zimbra_mysql_user" >> /opt/zextras/common/etc/prometheus/${pkgname}.cnf
  #echo "password= $mysql_zimbra_password" >> /opt/zextras/common/etc/prometheus/${pkgname}.cnf
  #echo "host= $mysql_bind_address"  >> /opt/zextras/common/etc/prometheus/${pkgname}.cnf
  #echo "port= $mysql_port" >> /opt/zextras/common/etc/prometheus/${pkgname}.cnf

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable ${pkgname}.service >/dev/null 2>&1 || :
    systemctl start ${pkgname}.service >/dev/null 2>&1 || :
  fi
  
  echo "======================================================"
  echo "Carbonio Mysql Exporter installed successfully!"
  echo "You must reload service discover or add this host to prometheus.yml"
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable ${pkgname}.service >/dev/null 2>&1 || :
    systemctl stop ${pkgname}.service >/dev/null 2>&1 || :
  fi
}

postrm() {
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}