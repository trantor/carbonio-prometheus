[Unit]
Description=Carbonio Prometheus NGINX exporter
Wants=network-online.target
After=network.target

[Service]
User=prometheus
Group=prometheus
Type=simple
Environment=SSL_VERIFY=false
EnvironmentFile=/etc/default/carbonio-prometheus-nginx-exporter
ExecStart=/opt/zextras/common/bin/carbonio-prometheus-nginx-exporter $ARGS
Restart=always

[Install]
WantedBy=multi-user.target
