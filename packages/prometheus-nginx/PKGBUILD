targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-prometheus-nginx-exporter"
pkgver="0.10.0"
pkgrel="1"
pkgdesc="Nginx exporter for open-source systems monitoring and alerting toolkit"
pkgdesclong=(
  "Nginx exporter for open-source systems monitoring and alerting toolkit"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
sources=(
  "https://github.com/nginxinc/nginx-prometheus-exporter/releases/download/v${pkgver}/nginx-prometheus-exporter_${pkgver}_linux_amd64.tar.gz"
  "nginx.default"
  "nginx.service"
)
hashsums=(
  "skip"
  "skip"
  "skip"
)

depends=(
  "systemd"
)

conflicts=(
  "prometheus-nginx-exporter"
)

package() {
  install -Dm755 "${srcdir}/nginx-prometheus-exporter" \
    "${pkgdir}/opt/zextras/common/bin/carbonio-prometheus-nginx-exporter"

  install -Dm644 "${srcdir}"/nginx.service \
    "${pkgdir}"/usr/lib/systemd/system/carbonio-prometheus-nginx-exporter.service
  install -Dm644 "${srcdir}"/nginx.default \
    "${pkgdir}"/etc/default/carbonio-prometheus-nginx-exporter
}

postinst() {
  if hash systemctl 2>/dev/null; then
    systemctl daemon-reload 2>/dev/null || true
  fi
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi
  echo "Please enable the relative exporter job within"
  echo "/opt/zextras/common/etc/prometheus/prometheus.yml"
  echo ""
  echo "Don't forget to enable the systemd unit service"
}
