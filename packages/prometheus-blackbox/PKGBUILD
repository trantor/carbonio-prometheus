targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-prometheus-blackbox-exporter"
pkgver="0.21.1"
pkgrel="1"
pkgdesc="Blackbox exporter for open-source systems monitoring and alerting toolkit"
pkgdesclong=(
  "Blackbox exporter for open-source systems monitoring and alerting toolkit"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
sources=(
  "https://github.com/prometheus/blackbox_exporter/releases/download/v${pkgver}/blackbox_exporter-${pkgver}.linux-amd64.tar.gz"
  "blackbox.default"
  "blackbox.service"
  "blackbox.yml"
  "htp_checks.yml"
  "ping_checks.yml"
  "ssh_checks.yml"
  "prometheus.sysusers"
)

hashsums=(
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
)

depends=(
  "systemd"
)

conflicts=(
  "prometheus-blackbox-exporter"
)

package() {
  cd "${srcdir}/blackbox_exporter-${pkgver}.linux-amd64"

  install -Dm755 blackbox_exporter \
    "${pkgdir}/opt/zextras/common/bin/${pkgname}"

  install -Dm644 "${srcdir}"/blackbox.service \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"
  install -Dm644 "${srcdir}"/blackbox.default \
    "${pkgdir}/etc/default/${pkgname}"

  install -Dm644 -g210 "${srcdir}"/blackbox.yml \
    "${pkgdir}/opt/zextras/common/etc/prometheus/${pkgname}.yml"

  install -Dm644 "${srcdir}"/htp_checks.yml \
    "${pkgdir}"/opt/zextras/common/etc/prometheus/blackbox-targets/http_checks.yml
  install -Dm644 "${srcdir}"/ping_checks.yml \
    "${pkgdir}"/opt/zextras/common/etc/prometheus/blackbox-targets/ping_checks.yml
  install -Dm644 "${srcdir}"/ssh_checks.yml \
    "${pkgdir}"/opt/zextras/common/etc/prometheus/blackbox-targets/ssh_checks.yml
}

postinst() {
  if hash systemctl 2>/dev/null; then
    systemctl daemon-reload 2>/dev/null || true
  fi
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

  systemd-sysusers >/dev/null || true
  systemd-tmpfiles --create >/dev/null || true

  echo "Please enable the relative exporter job within"
  echo "/opt/zextras/common/etc/prometheus/prometheus.yml"
  echo ""
  echo "Don't forget to enable the systemd unit service"
}
