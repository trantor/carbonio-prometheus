[Unit]
Description=Carbonio Prometheus OpenLDAP exporter
Wants=network-online.target
After=network.target

[Service]
User=prometheus
Group=prometheus
Type=simple
Environment=SSL_VERIFY=false
EnvironmentFile=/etc/default/carbonio-prometheus-openldap-exporter
ExecStart=/opt/zextras/common/bin/carbonio-prometheus-openldap-exporter $ARGS
Restart=always

[Install]
WantedBy=multi-user.target
