targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-prometheus-openldap-exporter"
pkgver="2.2.1"
pkgrel="1"
pkgdesc="OpenLDAP exporter for open-source systems monitoring and alerting toolkit"
pkgdesclong=(
  "OpenLDAP exporter for open-source systems monitoring and alerting toolkit"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
sources=(
  "https://github.com/tomcz/openldap_exporter/releases/download/v${pkgver}/openldap_exporter-linux-amd64.gz"
  "${pkgname}.default"
  "${pkgname}.service"
  "${pkgname}.yml"
  "${pkgname}-consul.json"
  "prometheus.sysusers"
)
hashsums=(
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
)

depends=(
  "systemd"
)

conflicts=(
  'prometheus-openldap-exporter'
)

backup=(
  "/etc/default/${pkgname}"
  "/opt/zextras/common/etc/prometheus/${pkgname}.yml"
  "/etc/zextras/service-discover/${pkgname}.json"
)

package() {
  cd "${srcdir}"
  gunzip -f openldap_exporter-linux-amd64.gz
  install -Dm755 openldap_exporter-linux-amd64 \
    "${pkgdir}/opt/zextras/common/bin/${pkgname}"

  install -Dm644 "${srcdir}/${pkgname}.service" \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"
	
  install -Dm644 "${srcdir}/${pkgname}.default" \
    "${pkgdir}/etc/default/${pkgname}"
	
  install -Dm644 "${srcdir}/${pkgname}.yml" \
    "${pkgdir}/opt/zextras/common/etc/prometheus/${pkgname}.yml"

  install -Dm644 "${srcdir}/prometheus.sysusers" \
    "${pkgdir}/usr/lib/sysusers.d/${pkgname}.conf"	
  install -Dm644 "${srcdir}/${pkgname}-consul.json" \
    "${pkgdir}/etc/zextras/service-discover/${pkgname}.json"		
}

postinst() {
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

  systemd-sysusers >/dev/null || true
  systemd-tmpfiles --create >/dev/null || true

  source /opt/zextras/bin/zmshutil || exit 1
  zmsetvars
    
  echo "ldapAddr: $ldap_host:$ldap_port" > /opt/zextras/common/etc/prometheus/${pkgname}.yml
  echo "ldapUser: $zimbra_ldap_userdn >> /opt/zextras/common/etc/prometheus/${pkgname}.yml
  echo "ldapPass: $zimbra_ldap_password  >> /opt/zextras/common/etc/prometheus/${pkgname}.yml
  echo "interval: 1m" >> /opt/zextras/common/etc/prometheus/${pkgname}.yml
  
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable ${pkgname}.service >/dev/null 2>&1 || :
    systemctl start ${pkgname}.service >/dev/null 2>&1 || :
  fi
  
  echo "======================================================"
  echo "Carbonio LDAP Exporter installed successfully!"
  echo "You must reload service discover or add this host to prometheus.yml"
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable ${pkgname}.service >/dev/null 2>&1 || :
    systemctl stop ${pkgname}.service >/dev/null 2>&1 || :
  fi
}

postrm() {
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}