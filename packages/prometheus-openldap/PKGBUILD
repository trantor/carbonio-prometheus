targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-prometheus-openldap-exporter"
pkgver="2.2.1"
pkgrel="1"
pkgdesc="OpenLDAP exporter for open-source systems monitoring and alerting toolkit"
pkgdesclong=(
  "OpenLDAP exporter for open-source systems monitoring and alerting toolkit"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
sources=(
  "https://github.com/tomcz/openldap_exporter/releases/download/v${pkgver}/openldap_exporter-linux-amd64.gz"
  "openldap.default"
  "openldap.service"
  "carbonio-prometheus-openldap-exporter.yml"
  "openldap-consul.json"
  "prometheus.sysusers"
)
hashsums=(
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
)

depends=(
  "systemd"
)

conflicts=(
  'prometheus-openldap-exporter'
)

package() {
  cd "${srcdir}"
  gunzip -f openldap_exporter-linux-amd64.gz
  install -Dm755 openldap_exporter-linux-amd64 \
    "${pkgdir}/opt/zextras/common/bin/${pkgname}"

  install -Dm644 ../openldap.service \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"
  install -Dm644 ../openldap.default \
    "${pkgdir}/etc/default/${pkgname}"
  install -Dm644 ../carbonio-prometheus-openldap-exporter.yml \
    "${pkgdir}/opt/zextras/common/etc/prometheus/${pkgname}.yml"
  install -Dm644 "${srcdir}"/openldap-consul.json \
    "${pkgdir}/etc/zextras/service-discover/${pkgname}.json"		
}

postinst() {
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

  systemd-sysusers >/dev/null || true
  systemd-tmpfiles --create >/dev/null || true

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable carbonio-prometheus-openldap-exporter.service >/dev/null 2>&1 || :
  fi

  source /opt/zextras/bin/zmshutil || exit 1
  zmsetvars
  
  
  echo "ldapAddr: $ldap_host:$ldap_port" > /opt/zextras/common/etc/prometheus/carbonio-prometheus-openldap-exporter.yml
  echo "ldapUser: $zimbra_ldap_userdn >> /opt/zextras/common/etc/prometheus/carbonio-prometheus-openldap-exporter.yml
  echo "ldapPass: $zimbra_ldap_password  >> /opt/zextras/common/etc/prometheus/carbonio-prometheus-openldap-exporter.yml
  echo "interval: 1m" >> /opt/zextras/common/etc/prometheus/carbonio-prometheus-openldap-exporter.yml
  
  echo "======================================================"
  echo "Carbonio LDAP Exporter installed successfully!"
  echo "You must reload service discover or add this host to prometheus.yml"
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable carbonio-prometheus-openldap-exporter.service >/dev/null 2>&1 || :
    systemctl stop carbonio-prometheus-openldap-exporter.service >/dev/null 2>&1 || :
  fi
}

postrm() {
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}